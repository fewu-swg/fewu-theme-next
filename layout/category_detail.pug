extends global_layout.pug

append head
    meta(name="description",content=`Posts with category ${_container_of('categories',page.current).key} are listed here.`)
    title #{_container_of('categories',page.current).key} - #{__('Categories')} - #{ctx.config.title}

block content
    - let current_container = _container_of('categories',page.current)
    .NeoWidget
        h2.archive-label #{current_container.key}
        ul.index-ul
            each post in current_container.values
                li
                    +labeled-card(post)
    +page-navigator(current_container.total,current_container.current,`/categories/${current_container.key}`)