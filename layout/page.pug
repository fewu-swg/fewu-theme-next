extends global_layout.pug

append head
    meta(name="description",content=ctx.config.description || ctx.config.note + "\n Page "+page.current)
    title= ctx.config.title

block content
    ul.index-ul
        each post in filter_hidden(site.posts).slice(page.current*10,page.current*10+10)
            li
                +post-card(post)
    +page-navigator(page.total,page.current,'page')
